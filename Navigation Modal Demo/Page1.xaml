<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Navigation_Modal_Demo.Page1"
             Title="Page1">
    <Grid>
        <VerticalStackLayout VerticalOptions="Center">
            <Label 
            Text="This is Page1"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
            <Entry x:Name="Username" Placeholder="Enter User Name" HorizontalTextAlignment="Center"/>
            <Entry x:Name="Password" Placeholder="Enter Password" HorizontalTextAlignment="Center"/>
        </VerticalStackLayout>
        

        <Button Text="Return Result" Clicked="OnLoginClicked" VerticalOptions="End"/>
    </Grid>
</ContentPage>
